
/* 全局样式 */
/* 全局公共样式 */
/* 通用容器 */
.container {
  min-height: 100vh;
  background-color: #f5f5f5;
}
/* 文本省略 */
.text-ellipsis {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.text-ellipsis-2 {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
}
/* 弹性布局 */
.flex {
  display: flex;
}
.flex-center {
  display: flex;
  align-items: center;
  justify-content: center;
}
.flex-between {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.flex-column {
  display: flex;
  flex-direction: column;
}
/* 间距 */
.mt-10 {
  margin-top: 10rpx;
}
.mt-20 {
  margin-top: 20rpx;
}
.mt-30 {
  margin-top: 30rpx;
}
.mb-10 {
  margin-bottom: 10rpx;
}
.mb-20 {
  margin-bottom: 20rpx;
}
.mb-30 {
  margin-bottom: 30rpx;
}
.ml-10 {
  margin-left: 10rpx;
}
.ml-20 {
  margin-left: 20rpx;
}
.mr-10 {
  margin-right: 10rpx;
}
.mr-20 {
  margin-right: 20rpx;
}
.p-10 {
  padding: 10rpx;
}
.p-20 {
  padding: 20rpx;
}
.p-30 {
  padding: 30rpx;
}
/* 文字大小 */
.text-xs {
  font-size: 20rpx;
}
.text-sm {
  font-size: 24rpx;
}
.text-base {
  font-size: 28rpx;
}
.text-lg {
  font-size: 32rpx;
}
.text-xl {
  font-size: 36rpx;
}
/* 文字颜色 */
.text-primary {
  color: #3cc51f;
}
.text-secondary {
  color: #666;
}
.text-gray {
  color: #999;
}
.text-danger {
  color: #ff5a5f;
}
.text-white {
  color: #fff;
}
/* 文字粗细 */
.font-normal {
  font-weight: 400;
}
.font-medium {
  font-weight: 500;
}
.font-bold {
  font-weight: 600;
}
/* 背景色 */
.bg-white {
  background-color: #fff;
}
.bg-gray {
  background-color: #f5f5f5;
}
.bg-primary {
  background-color: #3cc51f;
}
/* 圆角 */
.rounded {
  border-radius: 8rpx;
}
.rounded-full {
  border-radius: 9999rpx;
}
/* 阴影 */
.shadow-sm {
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}
.shadow {
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}
.shadow-lg {
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.12);
}
/* 按钮样式 */
.btn {
  padding: 20rpx 40rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  text-align: center;
  transition: all 0.3s;
}
.btn-primary {
  background: linear-gradient(135deg, #3cc51f 0%, #2fb015 100%);
  color: #fff;
}
.btn-secondary {
  background-color: #fff;
  color: #333;
  border: 1rpx solid #ddd;
}
.btn-danger {
  background: linear-gradient(135deg, #ff5a5f 0%, #e74c3c 100%);
  color: #fff;
}
/* 卡片样式 */
.card {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}
/* 分割线 */
.divider {
  height: 1rpx;
  background-color: #f0f0f0;
  margin: 20rpx 0;
}
/* 徽章 */
.badge {
  display: inline-block;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
  font-size: 20rpx;
  line-height: 1.5;
}
.badge-primary {
  background-color: #e6f7e6;
  color: #3cc51f;
}
.badge-danger {
  background-color: #ffe5e5;
  color: #ff5a5f;
}
/* 加载动画 */
@keyframes spin {
from {
    transform: rotate(0deg);
}
to {
    transform: rotate(360deg);
}
}
.spin {
  animation: spin 1s linear infinite;
}
/* 重置默认样式 */
page {
  background-color: #f5f5f5;
  font-size: 28rpx;
  color: #333;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen',
    'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue', sans-serif;
}
/* 清除按钮默认样式 */
button::after {
  border: none;
}
/* 图片默认样式 */
image {
  display: block;
}

